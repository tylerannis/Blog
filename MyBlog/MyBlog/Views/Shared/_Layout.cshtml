<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header><a href="@Url.Action("Index", "Home")"> My Blog about Life</a></header>
    <br />
    
    @if (Request.IsAuthenticated)
    {
        <div class="hello">Hello, @User.Identity.Name &nbsp|&nbsp <a href="@Url.Action("Logout","Account")">Log Out</a>
            &nbsp|&nbsp <a href="@Url.Action("Index", "Posts")">Your Posts</a>
        </div>
    }
    else
    {
        <div><a href="@Url.Action("Login", "Account")">Login</a> &nbsp| &nbsp
            <a href="@Url.Action("Register", "Account")">Register</a>
        </div>
    }
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
